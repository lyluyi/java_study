package com.sxt.commons;

import java.io.File;
import java.io.IOException;

import org.apache.commons.io.FileUtils;

/**
 * 
 *	写出内容 
 * 
 * 
 * 
 * */
public class CIOTest04 {
		public static void main(String[] args) throws IOException {
				// 写出文件
				FileUtils.write(new File("aaa.txt"), "aaaavvvvbbbbbb\r\n", "UTF-8", true);
				FileUtils.writeStringToFile(new File("aaa.txt"), "aaaavvvvbbbbbb\r\n", "UTF-8", true);
				FileUtils.writeByteArrayToFile(new File("aaa.txt"), "aaaavvvvbbbbbb\r\n".getBytes(), "UTF-8", true);
				
		}
}
