package com.sxt.io;

import java.io.File;

/*
 * 使用面向对象
 * 
 * 统计文件夹大小
 * 
 * 打印下级目录
 * 
 * */

public class DirCount {
		
		// 大小
		private long len;
		// 文件夹
		private String path;
		// 源
		private File src;
		
		// 构造器
		

		public DirCount(String path) {
				super();
				this.path = path;
				this.src = new File(path);
		}
		
		public static void main(String[] args) {
				DirCount dirCount = new DirCount("D:/workspace/IO");
		}
		
}

