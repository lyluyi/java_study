package com.sxt.io;

import java.io.File;

/*
 * 使用面向对象
 * 
 * 统计文件夹大小
 * 
 * 打印下级目录
 * 
 * */

public class DirCount {
		
		// 大小
		private long len;
		// 文件夹
		private String dirPath;
		
		// 构造器
		
		
		public static void main(String[] args) {
				
				File src = new File("D:/workspace/IO");
				
		}

		public DirCount(String dirPath) {
				super();
				this.dirPath = dirPath;
		}	
}